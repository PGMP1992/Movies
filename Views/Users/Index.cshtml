@using MoviesApp.ViewModels
@model List<UsersVM>

<h3>Users</h3>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                         <img class="card-img-top" src="@item.ProfileImageUrl" width="100%" height="225" alt="Photo">
                        <div class="card-body">
                            <p class="card-text">User Name: <small>@item.UserName</small></p>
                            <p class="card-text">City : @item.City</p>
                            <p class="card-text">State: @item.State</p> 
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @* <a type="btn btn-success" asp-controller="Users" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary">View</a> *@
                                       <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                       <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                                @*<small class="text-muted">@item.ClubCategory</small>*@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>