@using MoviesApp.ViewModels
@model List<UsersVM>

<h4>Active Users</h4>

<div class="album">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@item.ProfileImageUrl" alt="Photo">
                    <div class="card-body">
                        <h6 style="color:cornflowerblue;">@item.UserName</h6>
                        <h6 class="card-text"><small class="text-body-secondary">@item.City</small>
                            <p class="card-text"><small class="text-body-secondary">@item.State</small></p>
                        </h6>
                        <div class="btn-group mt-2">
                            @if (User.IsInRole("admin"))
                            {
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mx-1">Edit</a>
                                <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>