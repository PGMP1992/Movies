@model MoviesApp.ViewModels.DashboardVM

<h6 class="display-4 fw-normal">User Dashboard</h6> 
<a type="button" class="btn btn-sm btn-outline-primary" asp-area="" asp-controller="Playlists" asp-action="Create">Create Playlist</a>
<a type="button" class="btn btn-sm btn-outline-primary" asp-area="" asp-controller="Movies" asp-action="Create">Create Movie</a>
<a type="button" class="btn btn-sm btn-outline-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>

<div class="album py-5 bg-light">
    <div class="container">
        
        <h6 class="display-4 fw-normal">Your Playlists</h6>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Playlists)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @* <img class="card-img-top" src="@item.PictUrl" width="100%" height="225" alt="Card image cap"> *@ 
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-sm btn-outline-secondary" asp-controller="Playlist" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a asp-controller="Playlist" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        }
                                </div>
                                @* <small class="text-muted">@item.RaceCategory</small> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>

        <h5 class="display-4 fw-normal">Your Movies</h5>
