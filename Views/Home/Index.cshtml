﻿@using MoviesApp.ViewModels

@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <img class="card-img-top" src="/images/film-strip.webp" alt="Photo">
    @if (@Model.Users == null)
    {
        <h1 class="fw-light">
            There are no film friends in your area! 
            @* <a asp-area="" asp-controller="Account" asp-action="Login">Login</a> and create one! *@
        </h1>
    }
    else
    {
        @* <h6>You are in @Model.City, @Model.State</h6>
        <hr/> *@
        <h5>Active Users</h5>
        <div class="album">
            <div class="row">
                @foreach (var item in Model.Users)
                {
                    <div class="col-md-3">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.ProfileImageryUrl" alt="Photo">
                            <div class="card-body">
                                <h5>@item.UserName</h5>
                                <h6 class="card-text">
                                    <small class="text-body-secondary">@item.City</small>
                                    <p class="card-text"><small class="text-body-secondary">@item.State</small></p>
                                </h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
