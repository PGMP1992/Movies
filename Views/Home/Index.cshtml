﻿@using MoviesApp.ViewModels
@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<section class="bg-dark space-lg" data-jarallax data-speed="0.2">
    <img alt="Image" src="" class="bg-image position-absolute opacity-20" />
    <div class="container">
        <div class="row align-items-center justify-content-between">
             <div class="col-12 col-md-6 col-lg-5 section-intro">
                <h1 class="display-3">Find a Movie group</h1>
                <span class="lead">
                    A community of devoted film watchers, passionate about movies and life. Ready to find your fiend partner?
                </span>
            </div> 
        </div>
    </div>
</section>

<section>
    <div class="container">
        @if (@Model.Users == null)
        {
            <h1 class="fw-light">
                There are no film fiends in your area! 
                <a asp-area="" asp-controller="Account" asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-auto">
                    <h3>Film fiends near @Model.City, @Model.State</h3>
                </div>
                @* <div class="col-auto">
                    <a href="#" class="btn btn-outline-primary">View all</a>
                </div>
                <!--end of col--> *@
            </div>
            
            <ul class="row feature-list feature-list-sm">
                
                @foreach (var item in Model.Users)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <a href="#">
                                <img class="card-img-top" src="@item.ProfileImageryUrl" alt="User Profile Pict">
                                
                            </a>
                            <div class="card-body">
                                <a href="#">
                                    <h4 class="card-title">@item.UserName</h4>
                                    <p class="card-text text-body">@item.City</p>
                                    <p class="card-text text-body">@item.State</p>
                                </a>
                            </div>
                            
                            <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                <div class="text-small">
                                    <ul class="list-inline">
                                        <li class="list-inline-item"><i class="icon-heart"></i> Text 1</li>
                                        <li class="list-inline-item"><i class="icon-message"></i>Text 2</li>
                                    </ul>
                                </div> 
                            </div>
                        </div>
                    </li> 
                }
            </ul>
        }
    </div>
</section>