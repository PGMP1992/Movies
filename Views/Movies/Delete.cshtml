@model MoviesApp.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h5>Are you sure you want to delete this Movie?</h5>
<br />

<h5>
    Movie:
    <small class="text-body-secondary">@Model.Title</small>
</h5>

<main>
    <div class="card mb-3" style="max-width: 100%">
        <div class=" row g-0">
            <div class="col-md-4">
                <img src="@Model.PictUrl" class="img-fluid rounded-start" width="100%" height="auto" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h6>Description</h6>
                    <p class="card-text">@Model.Description</p>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="card-text">Genre: 
                                <small class="text-body-secondary">@Model.Genre</small>
                            </p>
                            <p class="card-text">Minimum Age: 
                                <small class="text-body-secondary">@Model.Age</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
    <a asp-action="Index" type="button" class="btn btn-sm btn-outline-dark">Cancel</a>
</form>