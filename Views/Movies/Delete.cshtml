@model MoviesApp.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h3>Movie</h3>

<h5>Are you sure you want to delete this?</h5>
<br />

<h5>
    Film:
    <small class="text-body-secondary">@Model.Title</small>
</h5>

<main>
    <div class="card mb-3" style="max-width: 100%">
        <div class=" row g-0">
            <div class="col-md-4">
                <img src="@Model.PictUrl" class="img-fluid rounded-start" width="100%" height="auto" alt="@Model.Title">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h6>Description</h6>
                    <p class="card-text">@Model.Description</p>
                    <h6>Genre: </h6>
                    <p class="card-text">@Model.Genre</p>

                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            @* <div class="btn-group">
                                <a asp-action="Error" asp-route-id="@Model.Id" type="button"
                                   class="btn btn-sm btn-outline-primary">Buy: SEK @Model.BuyPrice</a>
                                <a asp-action="Error" asp-route-id="@Model.Id" type="button"
                                   class="btn btn-sm btn-outline-success">Rent: SEK @Model.RentPrice</a>
                            </div> *@
                            <small class="text-body-secondary">Minimum Age: @Model.Age</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
    <a asp-action="Index" type="button" class="btn btn-sm btn-outline-dark">Cancel</a>
</form>