@model Movie

@{
    ViewData["Title"] = "Delete";
}

<h5>Are you sure you want to delete this Movie?</h5>
<br />

<h5>
    Movie:
    <small class="text-body-secondary">@Model.Title</small>
</h5>

    <div class="card mb-3">
        <div class=" row g-0">
        <div class="col-md-4">
            <img src="@Model.PictUrl" class="img-fluid rounded-start w-100" alt="@Model.Title">
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3">Genre: </dt>
                    <dd class="col-sm-8">@Model.Genre</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3">Minimum Age:</dt>
                    <dd class="col-sm-8">@Model.Age</dd>
                </dl>

        </div>
        <div class="form-group m-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                <a asp-action="Index" type="button" class="btn btn-sm btn-outline-dark">Cancel</a>
            </form>
        </div>
    </div>
    

