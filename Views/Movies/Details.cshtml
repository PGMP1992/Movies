@* ------------------------Main Card with Movie -----------------------*@
<div class="card mb-3" style="max-width: 100%">
    <div class=" row g-0">
        <div class="col-md-4">
            <img src="@Model.PictUrl" class="img-fluid rounded-start" width="100%" height="auto" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h6>Description</h6>
                <p class="card-text">@Model.Description</p>
                <h6>Genre: </h6>
                <p class="card-text">@Model.Genre</p>
                        
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
