@model Playlist
@* @model MoviesApp.ViewModels.PlaylistMoviesVM *@

@{
    ViewData["Title"] = "Details";
}

<h3>Playlist</h3>

<div>
    <h5>Details</h5>
    <div class="card mb-3" style="max-width: 100%">
        <div class=" row g-0">
            <div class="col-md-8">
                <div class="card-body">
                    <h6>Name</h6>
                    <p class="card-text">@Model.Name<p>

                    <h6>Description</h6>
                    <p class="card-text">@Model.Description</p>
           
                    @* @if (Model.MoviesList.Any()) *@
                    @if (Model.MoviesList != null)
                    {
                        <h6>Movies</h6>
                        <div class=container>
                            <table class="table table-responsive">
                                <tr>
                                    <th>Title </th>
                                    <th>Genre</th>
                                    <th>Age</th>
                                </tr>
                                <td>
                                    @foreach( var item in Model.MoviesList)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Genre</td>
                                            <td>@item.Age</td>
                                        </tr>
                                    }
                                </td>
                            </table>
                        </div>
                    } 
                </div>
            </div>
        </div>
    </div>

    </main>

    <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-primary">Edit</a>
                @if (User.IsInRole("admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
                }
                @* Passing Playlist Id *@
                <a asp-action="AddMovie" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-dark">Add Movie</a>
            }
            <a asp-action="Index" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-dark">Back</a>
        </div>
    </div>
</div>
