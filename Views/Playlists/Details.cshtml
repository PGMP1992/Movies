            @* <div class="col-md-4">
                <img src="@Model." class="img-fluid rounded-start" width="100%" height="auto" alt="@Model.Name">
            </div>  *@
            <div class="col-md-8">
                <div class="card-body">
                    <h6>Name</h6>
                    <p class="card-text">@Model.Playlist.Name<p>

                    <h6>Description</h6>
                    <p class="card-text">@Model.Playlist.Description</p>
                    @*<h6>Genre: </h6>
                    <p class="card-text">@Model.Genre</p>*@

                    @* ------------- Buttons ------------------------*@
                    
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="Error" asp-route-id="@Model.Playlist.Id" type="button"
                                                class="btn btn-sm btn-outline-primary">Add Movie</a>
                                <a asp-action="Error" asp-route-id="@Model.Playlist.Id" type="button"
                                                class="btn btn-sm btn-outline-success">Delete Movie</a>
                            </div>
                            <small class="text-body-secondary">Something extra here </small>
                        </div>
                    </div>
                    
                    @* ------------- Movies ------------------------*@
                    @*
                    @if (Model.Playlist.MoviesList.Any())
                    { 
                        <h6> Movies</h6>
                        <div class=container>
                            <table class="table table-responsive">
