                                    <th>Title </th>
                                    <th>Genre</th>
                                    <th>Age</th>
                                </tr>
                                <td>
                                    @foreach( var item in Model.Playlist.MoviesList)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
