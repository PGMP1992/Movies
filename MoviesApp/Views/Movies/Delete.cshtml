@model MovieDto

<h3 class="text-danger">Are you sure you want to delete this Movie?</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<br />

<h5>
    @Model.Title
</h5>

<div class="card mb-3">
    <div class=" row g-0">
        <div class="col-md-4">
            <img src="@(Model.PictUrl ?? "/images/default.png")"
                 class="card-img-top object-fit-cover rounded-top-4"
                 alt="@(string.IsNullOrWhiteSpace(Model.Title) ? "Movie image" : Model.Title + " image")"
                 loading="lazy" decoding="async"
                 onerror="this.onerror=null; this.src='/images/default.png';" />
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-8">@Model.Description</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3">Genre: </dt>
                    <dd class="col-sm-8">@Model.Genre</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3">Minimum Age:</dt>
                    <dd class="col-sm-8">@Model.Age</dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-3">Active:</dt>
                    <dd class="col-sm-8">@Model.Active</dd>
                </dl>
                
            </div>
        </div>
        <div class="form-group m-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                <a asp-action="Index" type="button" class="btn btn-sm btn-outline-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>
    

