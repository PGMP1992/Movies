@model EditUserVM

<h3>User</h3>
<h5>Edit</h5>

<div class="card mb-3" style="max-width: 100%">
    <div class=" row g-0">
        <div class="col-md-4">
            @if (Model.ProfileImageUrl != null)
            {
                <img class="card-img-top"
                     src="@Model.ProfileImageUrl"
                     alt="Photo"
                     loading="lazy" decoding="async"
                     onerror="this.onerror=null; this.src='/images/default.png';" />
            }
            else
            {
                <img class="card-img-top"
                     src="/images/default.png"
                     alt="Photo"
                     loading="lazy" decoding="async" />
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h6 class="card-text">User Name: @Model.UserName</h6>
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" id="Id" name="Id" asp-for="Id" />
                    <input type="hidden" id="UserName" name="UserName" asp-for="UserName" />
                    <div class="form-group">
                        <label asp-for="City" class="form-text">City</label>
                        <input asp-for="City" class="form-control" placeholder="City">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="form-text">State</label>
                        <input asp-for="State" class="form-control" placeholder="State">
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfileImageUrl" class="form-text">Profile Image</label>
                        <input asp-for="ProfileImageUrl" class="form-control" placeholder="Profile Picture">
                        <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group`">
                        <label asp-for="Image" class="form-text">Image</label>
                        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-sm btn-outline-primary">Save</button>
                        <a asp-action="Index" asp-route-id="@Model.Id" type="button" class="btn btn-sm btn-outline-dark">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}