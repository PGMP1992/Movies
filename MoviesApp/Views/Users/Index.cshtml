@model List<UsersVM>

<h3>Active Users</h3>

<div class="album">
    <div class="row">
        
        @foreach (var item in Model)
        {
            <div class="col-6 col-sm-3 col-md-3 g-3">
                <div class="card box-shadow h-100">
                    <img src="@(item.ProfileImageUrl ?? "/images/default.png")"
                            class="card-img-top object-fit-cover rounded-top-4"
                            alt="@(string.IsNullOrWhiteSpace(item.UserName) ? "Movie image" : item.UserName + " image")"
                            style="height: 220px; object-fit: cover;"
                            loading="lazy" decoding="async"
                            onerror="this.onerror=null; this.src='/images/default.png';" />

                    <div class="card-body">
                        <h6>@item.UserName</h6>
                        <div class="h6 mb-2">@item.City</div>
                        <div class="h6 text-secondary">@item.State</div>
                    </div>
                    <div class="card-footer border-0 bg-white">
                        @if (User.IsInRole("admin"))
                        {
                            <div class="btn-group">
                                <a asp-controller="Users" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mx-1">Edit</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline w-100">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100" title="Delete user" id="deletebtn-@item.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
                
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-outline-danger[id^="deletebtn-"]').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const form = btn.closest('form');
                    Swal.fire({
                        title: "Are you sure?",
                        text: "You won't be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, delete it!"
                    }).then((result) => {
                        if (result.isConfirmed && form) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}