@model EditUserVM

<h5>Are you sure you want to delete this User?</h5>

<div class="card mb-3">
    <div class=" row g-0">
        <div class="col-md-4">
            @if (Model.ProfileImageUrl != null)
            {
                <img class="card-img-top"
                     src="@Model.ProfileImageUrl"
                     alt="Photo"
                     loading="lazy" decoding="async"
                     onerror="this.onerror=null; this.src='/images/default.png';" />
            }
            else
            {
                <img class="card-img-top"
                     src="/images/default.png"
                     alt="Photo"
                     loading="lazy" decoding="async" />
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="row">
                    <div class="col-2">
                        <h6>User:</h6> 
                    </div>
                    <div class="col-6">
                        <h6 class="text-secondary">@Model.UserName</h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <h6>City</h6>
                    </div>
                    <div class="col-6">
                    <p class="card-text">@Model.City</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <h6>State: </h6>
                    </div>
                    <div class="col-6">
                    <p class="card-text">@Model.State</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group m-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
            <a asp-action="Index" type="button" class="btn btn-sm btn-outline-dark">Cancel</a>
        </form>
    </div>
</div>

