@model IEnumerable<PlaylistDto>

<div class="text-danger" asp-validation-summary="All" />
<h3>Playlists</h3>
<p class="text-danger">@ViewBag.Message </p>

@if (User.Identity.IsAuthenticated)
{
    <p><a asp-action="Create" class="btn btn-sm btn-primary">Create</a></p>
}
@if(Model != null) {
    <div class="container">
        <div class="row g-2">
            @foreach (var item in Model)
            {
                <div class="card mx-1" style="max-width: 250px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-body">
                                
                                <h5 class="card-title">@item.Name</h5>
                                @if (User.IsInRole("admin"))
                                {
                                    <div class="h6 mb-3 text-dark">@item.AppUser.UserName</div>
                                }
                                @* <p>@item.Movies.Count Movies </p> *@

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                            class="btn btn-sm btn-outline-primary">View</a>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" type="button"
                                                class="btn btn-sm btn-outline-primary mx-1">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" type="button"
                                                class="btn btn-sm btn-outline-danger">Delete</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h6 class="text-danger mt-3">There are no playlists.</h6>
}