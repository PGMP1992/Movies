@model IEnumerable<Playlist>

<div class="text-danger" asp-validation-summary="All" />
<h3>Playlists</h3>
<p class="text-danger">@ViewBag.Message </p>

@if (User.Identity.IsAuthenticated)
{
    <p><a asp-action="Create" class="btn btn-sm btn-primary">Create</a></p>
}
@if(Model != null) {
    <div class="container">
        <div class="row g-2">
            @foreach (var item in Model)
            {
                <div class="card mx-1" style="max-width: 250px;">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-body">
                                @if (User.IsInRole("admin"))
                                {
                                    <div class="h6 text-dark">@item.AppUser.UserName</div>
                                }
                                @* <p>@item.Movie.Title </p>  *@
                                <h5>@item.Name</h5>
                                <h6 class="text-secondary">@item.Movies.Count Movies</h6>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                            class="btn btn-sm btn-outline-primary">View</a>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" type="button"
                                                class="btn btn-sm btn-outline-primary mx-1">Edit</a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline w-100">
                                                <button type="submit" class="btn btn-outline-danger btn-sm w-100" title="Delete movie" id="deletebtn-@item.Id">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h6 class="text-danger mt-3">There are no playlists.</h6>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-outline-danger[id^="deletebtn-"]').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    const form = btn.closest('form');
                    Swal.fire({
                        title: "Are you sure?",
                        text: "You won't be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, delete it!"
                    }).then((result) => {
                        if (result.isConfirmed && form) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}