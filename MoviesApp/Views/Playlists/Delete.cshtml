@model PlaylistDto

<h3>Playlist</h3>

<h5 class="text-danger mb-3">Are you sure you want to delete this?</h5>
<div class="card p-3 col-md-8">
    <div class="h5 mb-3"><b>@Model.Name</b>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
        <a asp-action="Index" type="button" class="btn btn-sm btn-outline-dark">Cancel</a>
</form>
</div>