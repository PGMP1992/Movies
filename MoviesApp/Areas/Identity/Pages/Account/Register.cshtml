@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid vh-90"
     @* style="background-image: url('https://cdn1.iguzzini.com/getmedia/00fe75af-cdc7-402d-9cdc-ac0ae2e07d54/link-group-01?width=1200&height=799');
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-size: cover; background-position: center; background-repeat: no-repeat;" *@ />
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-lg-4 col-md-3 col-sm-8 col-10">
            <div class="bg-white bg-opacity-75 p-4 shadow blue-line-wrapper"
                 style="margin-top:90px; margin-bottom:120px;">

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="text-center" >Create a New Account</h2>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    @* <div class="form-floating mb-2 position-relative">
                        <input asp-for="Input.Name" class="form-control ps-5" autocomplete="name" aria-required="true" placeholder="Name" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div> *@

                    <div class="form-floating mb-2 position-relative">
                        <input asp-for="Input.Email" class="form-control ps-5" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-2 position-relative">
                        <input asp-for="Input.Password" class="form-control ps-5" autocomplete="new-password" aria-required="true" placeholder="Password" id="passwordField" type="password" />
                        <label asp-for="Input.Password">Password</label>
                        <i class="bi bi-eye position-absolute end-0 top-50 translate-middle-y me-3" id="togglePassword" style="cursor: pointer;"></i>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-2 position-relative">
                        <input asp-for="Input.ConfirmPassword" class="form-control ps-5" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background: linear-gradient(90deg, #007bff, #5b3b3b); border: none; margin-top:20px;">
                        <i class="bi bi-person-plus-fill"></i> Register
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordField = document.querySelector('#passwordField');

        togglePassword.addEventListener('click', function () {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            this.classList.toggle('bi-eye-slash');
        });
    </script>
}
